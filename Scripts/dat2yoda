#-*- mode: python-*- 
import sys
import yoda

yodas = []
for f in sys.argv[1:]:
    name = f.split(".")[0]
    xmins = []
    vals = []
    errs = []
    with open(f, "r") as dat:
        lines = dat.readlines()[1:]
        Num = len(lines)-1
        for line in lines:
            xm, v, err = line.split()
            xmins.append(float(xm))
            vals.append(float(v))
            errs.append(float(err))
    scatter = yoda.Scatter2D(path="Resum/"+name, title="Resum/"+name)
    for i in range(Num):
        xmin = xmins[i]
        xmax = xmins[i+1]
        xerr = (xmax-xmin)/2.
        val = vals[i]
        err = errs[i]
        scatter.addPoint(xmin+xerr,val,xerrs=xerr,yerrs=err)
    yodas.append(scatter)
        
yoda.core.writeYODA(yodas, "Resum.yoda")

